import tkinter as tk

def add():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        sum = num1 + num2
        label_result["text"] = f"Result: {sum}"
    except ValueError:
        label_result["text"] = "Please enter a valid number"

def subtraction():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        sum = num1 - num2
        label_result["text"] = f"Result: {sum}"
    except ValueError:
        label_result["text"] = "Please enter a valid number"

def multiplication():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        sum = num1 * num2
        label_result["text"] = f"Result: {sum}"
    except ValueError:
        label_result["text"] = "Please enter a valid number"

def division():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        sum = num1 / num2
        label_result["text"] = f"Result: {sum}"
    except ValueError:
        label_result["text"] = "Please enter a valid number"



#create window
window = tk.Tk()
window.title("Calculator")
window.geometry("30000x20000")

#Input
entry1 = tk.Entry(window)
entry1.pack(pady=5)

entry2 = tk.Entry(window)
entry2.pack(pady=5)

#Button
btn_add = tk.Button(window, text="Addition", command=add)
btn_add.pack(pady=5)

btn_sub = tk.Button(window, text="Subtraction", command=subtraction)
btn_sub.pack(pady=5)

btn_mul = tk.Button(window, text="Multiplication", command=multiplication)
btn_mul.pack(pady=5)

btn_div = tk.Button(window, text="Division", command=division)
btn_div.pack(pady=5)

#Result
label_result = tk.Label(window, text="Result:")
label_result.pack(pady=5)

#GUI Start
window.mainloop()
