import tkinter as tk

def addieren():
    try:
        zahl1 = float(entry1.get())
        zahl2 = float(entry2.get())
        sum = zahl1 + zahl2
        lable_result["text"] = f"Ergebnis: {sum}"
    except ValueError:
        lable_result["text"] = "Bitte g端ltige Zahl eingeben"

def subtraktion():
    try:
        zahl1 = float(entry1.get())
        zahl2 = float(entry2.get())
        sum = zahl1 - zahl2
        lable_result["text"] = f"Ergebnis: {sum}"
    except ValueError:
        lable_result["text"] = "Bitte g端ltige Zahl eingeben"

def Multiplikation():
    try:
        zahl1 = float(entry1.get())
        zahl2 = float(entry2.get())
        sum = zahl1 * zahl2
        lable_result["text"] = f"Ergebnis: {sum}"
    except ValueError:
        lable_result["text"] = "Bitte g端ltige Zahl eingeben"

def division():
    try:
        zahl1 = float(entry1.get())
        zahl2 = float(entry2.get())
        sum = zahl1 / zahl2
        lable_result["text"] = f"Ergebnis: {sum}"
    except ValueError:
        lable_result["text"] = "Bitte g端ltige Zahl eingeben"



#fenster erstellen
fenster = tk.Tk()
fenster.title("Taschenrechner")
fenster.geometry("30000x20000")

#Eingabefelder
entry1 = tk.Entry(fenster)
entry1.pack(pady=5)

entry2 = tk.Entry(fenster)
entry2.pack(pady=5)

#Button
btn_add = tk.Button(fenster, text="Addition", command=addieren)
btn_add.pack(pady=5)

btn_sub = tk.Button(fenster, text="Subtraktion", command=subtraktion)
btn_sub.pack(pady=5)

btn_mul = tk.Button(fenster, text="Multiplikation", command=Multiplikation)
btn_mul.pack(pady=5)

btn_div = tk.Button(fenster, text="Division", command=division)
btn_div.pack(pady=5)

#Ergebnisanzeigen
lable_result = tk.Label(fenster, text="Ergebnis:")
lable_result.pack(pady=5)

#GUI Starten
fenster.mainloop()
